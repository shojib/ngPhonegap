- var buildPath = ""

doctype html

html(xmlns:ng="", class="no-js", id="ng-app")
        
    head
        title ngPhonegap
        meta(charset="utf-8", http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="shortcut icon", type="image/ico" href="")
        link(rel="stylesheet", href="#{buildPath}libs/framework7/dist/css/framework7.css", media="screen")
        link(rel="stylesheet", href="#{buildPath}css/3p/angular-csp.css", media="screen")
        link(rel="stylesheet", href="#{buildPath}css/main.css", media="screen")


    body(ng-strict-di)

        //- Settings widget
        settings
        
        .views
            .view.view-main(data-page="home")

                //- Main view
                .pages
                    .page
                        ui-view.slide-reveal(autoscroll="false")
                        
                        //- Footer widget
                        footer

        
        //- script(src="#{buildPath}cordova.js")
        script(data-main="#{buildPath}modules/main.js", src="#{buildPath}libs/requirejs/require.js")



            
